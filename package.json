{
  "name": "be-nc-news",
  "version": "1.0.0",
  "description": "bc-nc-news",
  "main": "index.js",
  "scripts": {
    "setup-dbs": "docker exec be-nc-news-db-1 psql -U postgres -f /app/db/setup.sql",
    "seed": "node ./db/seeds/run-seed.js",
    "setup-all": "NODE_ENV=production docker-compose up -d && npm run setup-dbs && npm run seed-prod && npm run start-prod",
    "seed-prod": "npm run seed",
    "start-prod": "node app/listen.js",
    "test": "jest",
    "prepare": "husky install",
    "docker-dev": "docker-compose up",
    "docker-stop": "docker compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northcoders/be-nc-news.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/northcoders/be-nc-news/issues"
  },
  "homepage": "https://github.com/northcoders/be-nc-news#readme",
  "devDependencies": {
    "husky": "^8.0.2",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "jest-sorted": "^1.0.15",
    "nodemon": "^3.1.9",
    "pg-format": "^1.0.4",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.21.2",
    "pg": "^8.7.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "jest-sorted"
    ]
  }
}
